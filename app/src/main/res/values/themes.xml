<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieSearcher" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">?attr/colorOnSecondary</item>

        <item name="iconExpandableStyle">@style/IconStyleDown</item>
    </style>

    <style name="TextTag" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray</item>
        <item name="marginHorizontal">4dp</item>
    </style>

    <style name="TextFilterTag" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="IconHistory">
        <item name="android:src">@drawable/history_icon</item>
    </style>

    <style name="ExpandBackground">
        <item name="background">@drawable/button_state</item>
    </style>

    <style name="IconStyleDown">
        <item name="android:src">@drawable/arrow_down</item>
    </style>

    <style name="IconStyleUp">
        <item name="android:src">@drawable/arrow_up</item>
    </style>

    <style name="IconOpenBookmarks">
        <item name="android:src">@drawable/favourite_movies</item>
    </style>
</resources>